@page
@model CEN4020_Website.Pages.ListOfAuth.IndexModel
@{
}

@using System.Security.Claims
<!--page responsible of displaying the list of registered author-->
@if(TempData["success"] != null)
{
	<h2>@TempData["success"]</h2>
}

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary"> Author List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="create" class="btn btn-primary">
				<i class="bi bi-pencil-square"></i> &nbsp;Create New Author
			</a>
		</div>
	</div>
<!--GenerateReport is a functionality that allow the Admin to download the list of registered authors-->
	<br>
	<form asp-page-handler="GenerateReport" method="post"> 
		<button class="btn btn-primary">Generate Report</button>
	</form>
	<br>

	<table class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>
					First Name
				</th>
				<th>
					Middle Initial
				</th>
				<th>
					Last Name
				</th>
				<th>
					Affiliation
				</th>
				<th>
					Department
				</th>
				<th>
					Address
				</th>
				<th>
					City
				</th>
				<th>
					State
				</th>
				<th>
					Zip Code
				</th>
				<th>
					Phone Number
				</th>
				<th>
					Email Address
				</th>
				<th>
					Password
				</th>
				<th>
					
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var obj in Model.ListOfAuth)
			{
				<tr>
					<td width="50%">@obj.FirstName</td>
					<td width="5%">@obj.MiddleInitial</td>
					<td width="50%">@obj.LastName</td>
					<td width="50%">@obj.Affiliation</td>
					<td width="50%">@obj.Department</td>
					<td width="50%">@obj.Address</td>
					<td width="50%">@obj.City</td>
					<td width="50%">@obj.State</td>
					<td width="50%">@obj.ZipCode</td>
					<td width="50%">@obj.PhoneNumber</td>
					<td width="50%">@obj.EmailAddress</td>
					<td width="50%">@obj.Password</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-page="Edit" asp-route-id="@obj.AuthorID" class="btn btn-primary">
								<i class="bi bi-pencil-square"></i>
							</a>
							<a asp-page="Delete" asp-route-id="@obj.AuthorID" class="btn btn-danger">
								<i class="bi bi-trash-fill"></i>
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>