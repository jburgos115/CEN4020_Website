@page
@model IndexModel
@{
    ViewData["Title"] = "Login";
}

<style>
    .button {
        border: none;
        color: white;
        padding: 8px 65px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        transition-duration: 0.4s;
        cursor: pointer;
    }
    .button1 {
        background-color: white; 
        color: black; 
        border: 2px solid #4CAF50;
    }

    .button1:hover {
        background-color: #4CAF50;
        color: white;
    }

    .wrap {
        width: 200px;
        height: 100px;
        float: left;
    }

</style>
<br>
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="FormBox">
            <h2>Login or Register</h2>
            <hr>
            <br>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group row" style="margin-bottom:10px">
                <div class="col-sm-12">
                    <input placeholder="Username" type="text" asp-for="Login.Username" maxlength="16" class="form-control" />
                </div>
                <span class="text-danger" asp-validation-for="Login.Username"></span>
            </div>
            <div class="form-group row" style="margin-bottom:10px">
                <div class="col-sm-12">
                    <input placeholder="Password" type="password" asp-for="Login.Password" maxlength="16" class="form-control"/>
                </div>
                <span class="text-danger" asp-validation-for="Login.Password"></span>
            </div>
            <div class="wrap">
                <input class="button button1" type="submit" value="Login">
            </div>
        </div>
    </form>
    <form method="get">
        <button class="button button1" type="submit" asp-page="../AddAuthor/Regist">Register</button>
    </form>
</div>