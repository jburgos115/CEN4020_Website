@page
@model CEN4020_Website.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}
<!--Author and Reviewer login page-->
<style>
    .button {
        border: none;
        color: white;
        padding: 2px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        width: 250px;
        font-size: 14px;
        margin: 4px 2px;
        transition-duration: 0.4s;
        cursor: pointer;
    }
    .button1 {
        background-color: white; 
        color: black; 
        border-radius: 12px;
        border: 2px solid #4CAF50;
    }

    .button1:hover {
        background-color: #4CAF50;
        color: white;
    }

    .main {
        display: flex;
        align-items: center;
    }

    .line {
        flex-grow: 1;
        border-bottom: 1px solid black;
        margin: 5px
    }

</style>
@if(TempData["success"] != null)
{
	<h2>@TempData["success"]</h2>
}
<br>
<div class="container border" style="padding:20px; width:50%">
    <form method="post">
        <div class="FormBox">
            <h2>Login or Register</h2>
            <hr>
            <br>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form--group row" style="margin-bottom:10px">
                <div class="col-sm-12">
                    <input placeholder="Email Address" type="text" asp-for="LoginInfo.Email" maxlength="100" class="form-control" />
                </div>
                <span class="text-danger" asp-validation-for="LoginInfo.Email"></span>
            </div>
            <div class="form--group row" style="margin-bottom:25px">
                <div class="col-sm-12">
                    <input placeholder="Password" type="password" asp-for="LoginInfo.Password" maxlength="5" class="form-control"/>
                </div>
                <span class="text-danger" asp-validation-for="LoginInfo.Password"></span>
            </div>
            <div class="form--group row justify-content-center">
                <input class="button button1" type="submit" value="Login">
                <a class="button button1" asp-page="/LoginRegister/ForgotPassword">Forgot Password?</a>
            </div>
            <p class="main">
                <span class="line"></span>
                <span>or</span>
                <span class="line"></span>
            </p>
            <div class="form-group row justify-content-center">
                <a class="button button1" asp-page="/LoginRegister/AuthorRegister">Author Signup</a>
                <a class="button button1" asp-page="/LoginRegister/ReviewerRegister">Reviewer Signup</a>
            </div>
        </div>
    </form>
</div>